<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.LineSpacingExtra8sp">
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_medium</item>
    </style>

    <style name="BaseText.Grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BaseText.Grey.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BaseText.Grey.Small.Margin">
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="BaseText.Grey.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.Grey.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="BaseText.Grey.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.MarginTop">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="MovieDetailsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/black_medium_opacity</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
    </style>

    <style name="MovieDetailsPosterThumbnail">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="MovieDetailsBackdrop">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MovieListThumnails">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ListaVazia">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MoviesGrid">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:columnWidth">140dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <style name="MovieDetailsYouTubePlay">
        <item name="android:layout_width">@dimen/you_tube_play_icon_width</item>
        <item name="android:layout_height">@dimen/you_tube_play_icon_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_no_opacity</item>
    </style>

    <style name="MovieDetailsListViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="MovieDetailsVideoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/background_youtube_trailer</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>
</resources>
